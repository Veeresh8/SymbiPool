<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Navigate"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/round_navigation_24px"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
                android:id="@+id/tvNavEnd"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps" android:textAlignment="center"
                android:textColor="@color/colorAccent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDestination"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                android:layout_marginStart="16dp" android:id="@+id/tvDateTime" android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps" tools:text="12:00 PM | 13 Aug 2019"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tvPreference"/>

        <TextView
                tools:text="House of Commons \n122/B, 1st Main Rd, KHB Colony, 5th Block, Koramangala, Bengaluru, Karnataka 560095, India"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/tvStartAddress"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:textAlignment="viewStart"
                android:fontFamily="sans-serif-smallcaps" android:textSize="15sp"
                android:textColor="@color/quantum_black_100"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvDateTime"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvNavStart"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="To"
                android:id="@+id/tvToHint" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center"
                android:textSize="18sp" android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000" android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNavStart"/>

        <TextView
                tools:text="Agent Jack's Bar ಎಜೆಂಟ್ ಜ್ಯಾಕ್ಸ್ ಬಾರ್ \n1134, 100th Feet Road, HAL 2nd Stage, Indiranagar, HAL 2nd Stage, Indiranagar, Bengaluru, Karnataka 560008, India"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/tvDestination" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvToHint" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:fontFamily="sans-serif-smallcaps" android:textSize="15sp"
                android:textColor="@color/quantum_black_100"
        />

        <TextView
                tools:text="Female Only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tvPreference"
                app:layout_constraintStart_toEndOf="@+id/tvDateTime" android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-smallcaps" android:textStyle="bold" android:visibility="visible"
                android:textColor="@color/colorAccent"/>
        <TextView
                android:text="Navigate"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/round_navigation_24px"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
                android:id="@+id/tvNavStart" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvStartAddress" android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps" android:textAlignment="center"
                android:textColor="@color/colorAccent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>