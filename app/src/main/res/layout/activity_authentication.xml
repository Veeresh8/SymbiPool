<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.droid.symbipool.AuthenticationActivity">
    <Button
            android:text="Sign up"
            android:layout_width="0dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:id="@+id/btSignup"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            app:backgroundTint="#FFEBEE"
            android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_speed="0.8"
            app:lottie_loop="true"
            android:scaleType="centerCrop"
            app:lottie_fileName="splash.json"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvAppName" android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/quantum_white_100" android:textStyle="bold" android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:id="@+id/btLogin" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            app:backgroundTint="#FFEBEE"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="545dp" android:id="@+id/guideline"/>

</androidx.constraintlayout.widget.ConstraintLayout>
